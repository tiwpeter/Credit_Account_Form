# Application
NODE_ENV=development
PORT=3000
APP_NAME=BankCreditSystem
API_PREFIX=api/v1

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/bank_credit_db?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-256-bits
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-256-bits
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# File Upload (Mock S3)
UPLOAD_DEST=./uploads
MAX_FILE_SIZE_MB=10
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png,image/tiff

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug
